@using Microsoft.AspNetCore.Components.Routing
@using CEC.Blazor.SPA.Components
@using CEC.Weather.Components.Views
@using CEC.Blazor.SPA.Components.UIControls

@namespace CEC.Weather.Components
@inherits ViewControl

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">@navTitle</a>
    <button class="navbar-toggler">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" onclick="() => ToggleNavMenu()">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(CEC.Weather.Components.Views.Index)">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(CEC.Weather.Components.Views.Counter)">
                <span class="oi oi-cloudy" aria-hidden="true"></span> Counter
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(CEC.Weather.Components.Views.AsyncView)">
                <span class="oi oi-cloudy" aria-hidden="true"></span> Async Demo Page
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(CEC.Weather.Components.Views.WeatherForecastListView)">
                <span class="oi oi-cloudy" aria-hidden="true"></span> Normal Weather
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(WeatherForecastListModalView)">
                <span class="oi oi-cloud-upload" aria-hidden="true"></span> Modal Weather
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(WeatherStationListView)">
                <span class="oi oi-cloud-upload" aria-hidden="true"></span> Weather Stations
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            <ViewLink class="nav-link" ViewType="typeof(WeatherReportListView)">
                <span class="oi oi-cloud-upload" aria-hidden="true"></span> Weather Report
            </ViewLink>
        </li>
        <li class="nav-item px-3">
            @if (IsWASM)
            {
                <NavLink class="nav-link" href="/">
                    <span class="oi oi-browser" aria-hidden="true"></span> Switch to Server
                </NavLink>
            }
            else
            {
                <NavLink class="nav-link" href="wasm.html">
                    <span class="oi oi-browser" aria-hidden="true"></span> Switch to WASM
                </NavLink>

            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="https://github.com/ShaunCurtis/CEC.Blazor.SPA">
                <span class="oi oi-fork" aria-hidden="true"></span> Github Repo
            </NavLink>
        </li>
    </ul>
</div>

@code {

    [Parameter] public bool IsWASM { get; set; }

    private string navTitle => IsWASM ? "CEC.Blazor WASM Weather" : "CEC.Blazor Server Weather";


    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}


