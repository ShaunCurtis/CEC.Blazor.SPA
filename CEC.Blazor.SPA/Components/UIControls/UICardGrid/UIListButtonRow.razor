@namespace CEC.Blazor.SPA.Components.UIControls

@inherits UICardListBase

@if (this.ShowButtons || this.IsPagination)
{
    <UIContainer>

        <UIFormRow class="mt-2 mr-2">

            <UIColumn Columns="8">
                @Paging
            </UIColumn>

            <UIButtonColumn Columns="4" class="mb-1">

                @if (ShowButtons)
                {
                    @Buttons
                }

            </UIButtonColumn>

        </UIFormRow>

    </UIContainer>
}
