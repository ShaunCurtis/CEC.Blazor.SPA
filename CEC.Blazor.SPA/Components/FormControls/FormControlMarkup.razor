@namespace CEC.Blazor.SPA.Components.FormControls

@inherits Component

@if (String.IsNullOrEmpty(this.HtmlLink))
{
    <div class="form-control-plaintext form-control-markup">@((MarkupString)this.Value)</div>
}
else
{
    <div class="form-control-plaintext form-control-markup">
        <a href="@this.HtmlLink" class="@this.LinkCss" role="button" aria-pressed="true">@((MarkupString)this.Value) </a>
    </div>

}
